        android:layout_marginTop="?listPreferredItemPaddingTop"
        android:layout_marginEnd="?listPreferredItemPaddingEnd"
        android:layout_marginBottom="?listPreferredItemPaddingBottom"
        tools:text="@tools:sample/lorem[2]" />

</FrameLayout>